{
  "defaults": {
    "timeout": 120000,
    "wait": 3000,
    "chromeLaunchConfig": {
      "args": [
        "--no-sandbox",
        "--disable-setuid-sandbox",
        "--disable-dev-shm-usage",
        "--disable-blink-features=AutomationControlled"
      ]
    },
    "runners": ["axe"],
    "standard": "WCAG2AA",
    "includeNotices": false,
    "includeWarnings": true,
    "screenCapture": "./screenshots/${urlSlug}.png",
    "reporters": [
      ["cli"],
      ["json", { "fileName": "./pa11y-results.json" }],
      ["html", { "fileName": "./pa11y-report.html" }]
    ]
  },
  "urls": [
    "https://www.airindia.com/",
    "https://www.airindia.com/in/en/about-us/our-story",
    "https://www.airindia.com/in/en/manage/web-check-in",
    "https://www.airindia.com/in/en/travel-information/baggage",
    "https://www.airindia.com/in/en/contact-us"
  ]
}
